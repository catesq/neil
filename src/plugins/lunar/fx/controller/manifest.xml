<?xml version="1.0" encoding="utf-8"?>
<zzub>
  <plugin
     uri="@neil/lunar/controller/Controller;1"
     name="Lunar Controller"
     shortname="Controller"
     type="controller"
     description="A single value emitting controller useful with MIDI controllers"
     author="Vytautas Jančauskas"
     email="unaudio@gmail.com">
    <parameters>
      <global>
	<parameter
	   id="value"
	   name="Value"
	   type="float"
	   minvalue="0.0"
	   maxvalue="1.0"
	   defvalue="0.0"
	   precision="0.01"
	   state="true"/>
	<parameter
	   id="power"
	   name="Power"
	   type="float"
	   minvalue="-5.0"
	   maxvalue="5.0"
	   defvalue="0.0"
	   precision="0.01"
	   state="true"/>
	<parameter
	   id="minimum"
	   name="Min"
	   type="float"
	   minvalue="0.0"
	   maxvalue="1.0"
	   defvalue="0.0"
	   precision="0.01"
	   state="true"/>
	<parameter
	   id="maximum"
	   name="Max"
	   type="float"
	   minvalue="0.0"
	   maxvalue="1.0"
	   defvalue="1.0"
	   precision="0.01"
	   state="true"/>
      </global>
      <controller>
	<parameter
	   id="out"
	   name="Output"
	   description="Controller value"
	   type="float"
	   minvalue="0.0"
	   maxvalue="1.0"
	   defvalue="0.0"
	   precision="0.01"/>
      </controller>
    </parameters>
    <attributes>
    </attributes>
    <files>
      <file ref="Controller.cpp"/>
      <file ref="Controller.hpp"/>
    </files>
    <modules>
      <module id="Controller">
	<source language="c++" ref="Controller.cpp" fxdef="Controller.hpp"/>
      </module>
    </modules>
  </plugin>
</zzub>
